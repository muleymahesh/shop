<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardUseCompatPadding="true"
        android:background="@drawable/rectangle">
    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Avent FarmFresh24 natural creame for soft skin "
        android:id="@+id/txtName"
        android:textColor="@color/app_text"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignTop="@+id/imgProduct"
        android:layout_toRightOf="@+id/imgProduct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="status : delivered"
        android:id="@+id/txtStatus"
        android:textColor="@color/app_text"
        android:layout_toRightOf="@+id/imgProduct"
        android:layout_below="@+id/txtName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rs. 4534.00"
            android:id="@+id/txtPrice"
            android:textColor="@color/app_text"
            android:layout_alignTop="@+id/txtStatus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="76dp"
            android:id="@+id/imgProduct"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@+id/txtID"
            android:src="@drawable/baby_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/txtID"
            android:layout_alignLeft="@+id/imgProduct"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>